extends ../shared/template

block content
  //- h1= title
  //- h2 Profile

  .container__profile

    header.header
      include ../shared/nav

    .subnav
      h5 Welcome,
      if(user.local)
        p #{user.local.email}
      else if(!user.local)
        if(user.facebook)
          p #{user.facebook.name}
        if(req.user.twitter)
          p #{user.twitter.username}
        if(req.user.google)
          p #{user.google.name}
      ul
        li: a(href='#') Recipe Library
        li: a(href='#') Manage Accounts
        li: a(href='#') Edit Profile

    .profile.well
      img.userProfile(src='user.photo')
      h5 Username: #{user.local.name}

    #accounts
      .local

        h5 Kaffepaus Account
        span
          i.fa.fa-user
        if(user.local.email)
          p id
            p= user._id
          p email
            p= user.local.email
          p password
            p= user.local.password
          a(href='/unlink/local', class='button button-rounded button-flat') Unlink
        else
          a(href='/connect/local', class='button button-rounded button-flat') Connect Local

      .facebook

        h5 Facebook
        span
          i.fa.fa-facebook
        if(user.facebook.token)
          p id
            p= user.facebook.id
          p token
            p= user.facebook.token
          p email
            p= user.facebook.email
          p name
            p= user.facebook.name
          a(href='/unlink/facebook', class='button button-rounded button-flat') Unlink
        else
          a(href='/connect/facebook', class='button button-rounded button-flat') Connect Facebook

      .twitter

        h5 Twitter
        span
          i.fa.fa-twitter
        if(user.twitter.token)
          p id
            p= user.twitter.id
          p token
            p= user.twitter.token
          p username
            p= user.twitter.username
          p displayName
            p= user.twitter.displayName
          a(href='/unlink/twitter', class='button button-rounded button-flat') Unlink
        else
          a(href='/connect/twitter', class='button button-rounded button-flat') Connect Twitter

      .google

        h5 Google
        span
          i.fa.fa-google-plus
        if(user.google.token)
          p id
            p= user.google.id
          p token
            p= user.google.token
          p email
            p= user.google.email
          p name
            p= user.google.name
          a(href='/unlink/google', class='button button-rounded button-flat') Unlink
        else
          a(href='/connect/google', class='button button-rounded button-flat') Connect Google


block scripts
  script(src='/js/es6/compiled/profile.js')
