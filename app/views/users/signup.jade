extends ../shared/template

block content
  h1= title

  .container

    if(message.length > 0)
      .alert= message

    form(method='post' action='/signup')
      input(type='text', name='email', placeholder='Email', autofocus=true)
      input(type='password', name='password', placeholder='Password')
      button Submit

    p Already have an account?
    a(href='/login') Login
    p Or go
      a(href='/') home
