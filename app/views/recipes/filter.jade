if(!recipes)
  p Sorry, there are no recipes for that brew method yet. Why don't you make one?
  a.newrecipe.button.button-rounded.button-flat-highlight(href='/recipes/new') New Recipe

else
  each recipe in recipes
    .recipe
      if(recipe.photos)
        each photo in recipe.photos
          if(photo.isPrimary)
            a(href='/recipes/#{recipe._id}')
              img.thumbnail(src=photo.path)
      a(href='/recipes/#{recipe._id}')
        h5 #{recipe.title}
      p #{recipe.description}
